
  {
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
    "ts-node": {
      "transpileOnly": true,
      "files": true
    },
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "checkJs": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
    }
  }